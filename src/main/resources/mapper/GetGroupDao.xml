<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.Dao.GetGroupDao">
    <insert id="addOne">
        INSERT INTO groupchat(userId) VALUES(#{id});
    </insert>
    <delete id="deleteOne">
        DELETE FROM groupchat WHERE userId = #{id};
    </delete>
    <select id="getUsers" resultType="Integer">
        SELECT userId FROM groupchat;
    </select>
    <select id="getOne" resultType="Integer">
        SELECT * FROM groupchat WHERE userId = #{id};
    </select>
</mapper>